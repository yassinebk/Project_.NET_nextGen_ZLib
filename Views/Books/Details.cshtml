@model Project.Models.Book

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class=" cursor-pointer flex items-center bg-black text-white py-3 px-6 min-w-[100px] min-h-[50px] items-center justify-center space-x-3 hover:opacity-70">
    <span class="material-symbols-outlined">
        arrow_back
    </span>
    <a asp-action="index">back to list</a>
</div>
<div>
    <br>
    <dl class="flex flex-row text-center items-center w-full">
        <div class="flex items-center px-12">
            <div class="flex-1"></div>
            <div class="flex-1"></div>
        </div>
        <div class="flex flex-row max-w-[1200px] mx-auto">
            <div class="w-2/3">
                <img class="m-3" width="80%" src="@Model.BookCover" alt="A cover image of @Model.Title">
            </div>
            <div class="m-3 flex flex-col w-1/3 text-[18px] gap-4 space-y-4 ">
                <dd class="text-5xl font-bold" style="font-family: 'Californian FB'; ">
                    @Html.DisplayFor(model => model.Title)
                </dd>

                <div class="text-left flex flex-col gap-4">
                    <dd class="col-sm-10">
                        <b>Summary :</b>
                        <span class="text-center">@Html.DisplayFor(model => model.Summary)</span>
                    </dd>
                    <dd class="col-sm-10">
                        <b>Format :</b>
                        @Html.DisplayFor(model => model.Format)
                    </dd>
                    <dd class="col-sm-10">
                        <b>Language :</b>
                        @Html.DisplayFor(model => model.Language)
                    </dd>
                    <dd class="col-sm-10">
                        <b>FileName :</b>
                        @Html.DisplayFor(model => model.FileName)
                    </dd>
                    <dd class="col-sm-10">
                        <b>Author :</b>
                        @Html.DisplayFor(model => model.BookAuthor.FullName)
                    </dd>
                    <dd class="col-sm-10">
                        <b>Genre :</b>
                        @Html.DisplayFor(model => model.Genre)
                    </dd>
                    <dd class="col-sm-10">
                        <b>Price :</b>
                        @Html.DisplayFor(model => model.Price)
                    </dd>
                    <dd class="col-sm-10">
                        <b>Number of Pages :</b>
                        @Html.DisplayFor(model => model.NumberOfPages)
                    </dd>
                    <dd class="col-sm-10">
                        <b>Publisher :</b>
                        @Html.DisplayFor(model => model.BookPublisher.Id)
                    </dd>
                    <dd class="col-sm-10">
                        <b>Publishing Date :</b>
                        @Html.DisplayFor(model => model.DatePublished)
                    </dd>
                    <div class="m-1">
                        <button class="hover:opacity-70  bg-blue-400 text-white px-4 py-4 min-w-16 min-h-4" href="~/books/@Model.FileName">DOWNLOAD</button>
                    </div>
                </div>
            </div>
        </div>
    </dl>
</div>
<div>
    @if (Context.User.IsInRole("ADMIN"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.ISBN">Edit</a>
    }

</div>