@{
    ViewData["Title"] = "Login";
}

@model LoginViewModel



<div class="w-screen h-full flex flex-col lg:flex-row bg-black">
     <div class="flex-1 max-h-[400px]">
            <img src="https://images.unsplash.com/photo-1535905557558-afc4877a26fc?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80" alt="">
        </div>
    <form method="post" class="flex-1">
        <div asp-validation-summary="All"></div>
        <div class="form-group py-2">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email" class="text-red-300 opacity-50 font-bold"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control"/>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="RememberMe"></label>
            <input asp-for="RememberMe" class="form-check-input"/>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>



</div>