@{
    ViewData["Title"] = "Login";
}

@using Azure.Core
@model LoginViewModel



<div class="w-screen h-full flex flex-col lg:flex-row items-stretch ">
    <div class="flex-1  w-full min-w-[50vw] min-h-[800px]  relative overflow-hidden" style='background:url("https://images.unsplash.com/photo-1516979187457-637abb4f9353?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80") center no-repeat ;'>
    </div>
    <div class="flex-1 flex flex-col px-12 h-full justify-center  min-h-[800px] pl-[200px]">
        <h1 class="text-4xl font-black font-bold">
            @if (@Context.Request.Query["redirect"] == "Signup")
            {
                @:You have successfully registered, you can now proceed to login.
            }
            else
            {
                @:Access your account
            }
        </h1>
        <div class="h-10"></div>
        <form method="post" class="flex flex-col space-y-4">
            <div asp-validation-summary="All"></div>
            <div class="form-group py-2 flex flex-col max-w-[350px] space-y-3">
                <label asp-for="Email" class="font-bold font-sans text-2xl"></label>
                <input asp-for="Email" class="bg-gray-100 border-2 border-gray-400 px-4 py-2" placeholder="Email"/>
                <span asp-validation-for="Email" class="text-red-300 opacity-50 font-bold"></span>
            </div>
            <div class="form-group py-2 flex flex-col max-w-[350px] space-y-3">
                <label asp-for="Password" class="font-bold font-sans text-2xl"></label>
                <input asp-for="Password" class="bg-gray-100 border-2 border-gray-400 px-4 py-2" placeholder="Password"/>
                <span asp-validation-for="Password" class="text-red-300 opacity-50 font-bold"></span>
            </div>
            <div class="form-group py-2 flex max-w-[350px] space-x-3  items-center">
                <label asp-for="RememberMe" class="font-bold font-sans text-2xl"></label>
                <input asp-for="RememberMe" class="form-check-input w-[15px] h-[15px]"/>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
        <div class="h-4"></div>
        <p class="text-gray-700 ">You don't have an account? <a asp-controller="Users" asp-action="Register" class="text-blue-400 font-black hover:opacity-70 ">Signup</a> !</p>
    </div>



</div>